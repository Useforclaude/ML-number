# ===================================================================================
# Environment Configuration Template
# Copy this file to .env and customize for your local environment
# ===================================================================================

# Environment Type (auto-detected, but can override)
# Options: local, colab, kaggle
# ML_ENV_TYPE=local

# Base Project Path (auto-detected, but can override for local development)
# ML_BASE_PATH=/home/user/projects/number-ML

# Data Configuration
# ML_DATA_PATH=./data
# ML_RAW_DATA_FILE=data/raw/numberdata.csv

# Model Configuration
# ML_MODEL_PATH=./models
# ML_DEPLOYED_MODEL=models/deployed/best_model.pkl

# Results Configuration
# ML_RESULTS_PATH=./results
# ML_LOGS_PATH=./logs

# Training Configuration
ML_TARGET_R2=0.90
ML_CV_FOLDS=10
ML_TEST_SIZE=0.20
ML_RANDOM_STATE=42
ML_OPTUNA_TRIALS=150
ML_MAX_FEATURES=250

# Optimization Settings
ML_USE_OPTIMIZATION=true
ML_USE_FEATURE_SELECTION=true
ML_USE_POLYNOMIAL_FEATURES=true
ML_USE_TIER_MODELS=true

# API Configuration
ML_API_TYPE=fastapi
ML_API_HOST=0.0.0.0
ML_API_PORT=8000
ML_API_DEBUG=false

# Database Configuration (optional)
# ML_DB_TYPE=sqlite
# ML_DB_PATH=./data/predictions.db

# Logging Configuration
ML_LOG_LEVEL=INFO
ML_LOG_FORMAT=json
ML_LOG_TO_FILE=true

# Performance Settings
ML_N_JOBS=-1
ML_MEMORY_LIMIT_GB=8

# Feature Engineering
ML_CREATE_POLYNOMIAL=true
ML_POLYNOMIAL_DEGREE=2
ML_CREATE_INTERACTIONS=true
ML_INTERACTION_DEPTH=2

# Batch Prediction Settings
ML_BATCH_SIZE=1000
ML_SHOW_PROGRESS=true
ML_EXPORT_FORMAT=csv

# Google Cloud (optional - for Colab with Drive)
# GOOGLE_DRIVE_PATH=/content/drive/MyDrive/number-ML

# Kaggle (optional)
# KAGGLE_WORKING_DIR=/kaggle/working
# KAGGLE_INPUT_DIR=/kaggle/input

# ===================================================================================
# Development Settings
# ===================================================================================
ML_DEV_MODE=false
ML_VERBOSE=true
ML_SAVE_INTERMEDIATE=true

# Testing
ML_RUN_TESTS=false
ML_TEST_COVERAGE=false

# ===================================================================================
# Notes:
# - Lines starting with # are comments
# - Remove # to activate a setting
# - Use absolute paths for production, relative for development
# - Environment variables take precedence over config.py settings
# ===================================================================================
